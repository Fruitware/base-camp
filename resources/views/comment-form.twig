<div id="respond" class="comment-form">
  <form id="commentform" class="comment-form" method="post" action="{{ site.url~'/wp/wp-comments-post.php' }}">
    {% if user %}
      <input type="hidden" name="author" value="{{ user.name }}">
      <input type="hidden" name="email" value="{{ user.email }}">
      <input type="hidden" name="url" value="{{ user.link }}">
    {% else %}
      <div class="field">
        <label class="label">Name <span class="required">*</span></label>
        <div class="control">
          <input class="input" type="text" id="author" name="author">
        </div>
      </div>

      <div class="field">
        <label class="label">Email <span class="required">*</span></label>
        <div class="control">
          <input class="input" type="email" id="email" name="email">
        </div>
      </div>

      <div class="field">
        <label class="label">Website</label>
        <div class="control">
          <input class="input" type="text" id="url" name="url">
        </div>
      </div>
    {% endif %}

    <div class="field">
      <label class="label">Comment</label>
      <div class="control">
        <textarea class="textarea" id="comment" name="comment"></textarea>
      </div>
    </div>

    <input name="comment_post_ID" value="{{ post.id }}" id="comment_post_ID" type="hidden">
    <input name="comment_parent" id="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">

    <div class="field is-grouped">
      <p class="control">
        <button type="submit" name="Submit" class="button is-primary">Post Comment</button>
      </p>
      <p class="control">
        <button type="reset" class="button is-light">Cancel</button>
      </p>
    </div>

  </form>
</div>
