{% extends "base.twig" %}

{% block content %}
  {% if posts is not empty %}
    <h1 class="title is-1">{{ title }}</h1>
    {% for post in posts %}
      {% include 'components/article.twig' %}
      <hr/>
    {% endfor %}
  {% else %}
    <h1 class="title is-2">Sorry, No Results. Try your search again.</h1>
    {% include 'searchform.twig' %}
  {% endif %}
{% endblock %}
